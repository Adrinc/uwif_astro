---
import Layout from '../layouts/Layout.astro';
import LayoutSecciones from '../layouts/index/LayoutSecciones.astro';
import CarruselTextoHorizontal from '../components/index/CarruselTextoHorizontal.astro';
import Seccion1 from '../components/index/Seccion1.astro';
import Seccion2 from '../components/index/Seccion2.astro';
import Seccion3 from '../components/index/Seccion3.astro';
import Seccion4 from '../components/index/Seccion4.astro';
import PriceAndPlansInfo from '../components/index/PriceAndPlansInfo.astro';
import TarjetaPaqueteBasico from '../components/TarjetaPaqueteBasico.astro';
import TarjetaPaqueteEspecial from '../components/TarjetaPaqueteEspecial.astro';

/* STRAPI */
let tarjetas = [
  { 
    precio: '19', 
    modelo: 'Starter', 
    description: 'Unleash the power of automation.', 
    lista: [
      { icono: 'image/check.svg', texto: 'Multi-step Zaps' },
      { icono: 'image/check.svg', texto: '3 Premium Apps' },
      { icono: 'image/check.svg', texto: '2 Users team' },
      
    ]
  },
  { 
    precio: '30', 
    modelo: 'Professional', 
    description: 'Advanced tools to take your work to the next level.', 
    lista: [
	{ icono: 'image/check.svg', texto: 'Multi-step Zaps' },
	{ icono: 'image/check.svg', texto: 'Unlimited Premium ' },
	{ icono: 'image/check.svg', texto: '50 Users team' },
	{ icono: 'image/check.svg', texto: 'Shared Workspace' },
  
    ]
  },
];
let listas = [
  { icono: 'image/checkwhite.svg', texto: '5G Wi-Fi Gateway device included' },
  { icono: 'image/checkwhite.svg', texto: 'Netflixâ„¢ ON USApps' },
  { icono: 'image/checkwhite.svg', texto: 'Apple TV+ ON US' },
  { icono: 'image/checkwhite.svg', texto: '5G Speeds' },
  { icono: 'image/checkwhite.svg', texto: 'Mexico and Canada no extra fees' },
];
---

<Layout title="Home">
	
	<span class="green-ball-blured" id="ball1"></span>
	<span class="green-ball-blured" id="ball2"></span>

	<Seccion1 />
	<CarruselTextoHorizontal/>
	<Seccion2 />
	<Seccion3 />
	<Seccion4 />
	<PriceAndPlansInfo />
		

	<section>
		{tarjetas.map((tarjeta) => (
			<TarjetaPaqueteBasico 
			  precio={tarjeta.precio} 
			  modelo={tarjeta.modelo} 
			  description={tarjeta.description} 
			  lista={tarjeta.lista} 
			/>
		  ))}
	<TarjetaPaqueteEspecial precio="59" modelo="Value" description="The best value for your money." lista={listas}/>
	</section>
	





</Layout>




<style>

	.green-ball-blured{
		position: absolute;
		top: -20%;
		left: 55%;
		width: 800px;
		height: 800px;
		border-radius: 50%;
		
		rotate: 50deg;
		
		/* make gradient */
		background: linear-gradient(#5746E5 20%, #8743E5 40%, #03FB75 100%);


		/* make blur radius */
		filter: blur(150px);
	
	
		z-index: -1;
	
	}
	#ball2{
		top: 130%;
		left: 50%;
		width: 500px;
		height: 800px;
		border-radius: 100%;
		
		rotate: -45deg;
	
		/* make gradient */
		background: linear-gradient(#5746E5 20%, #8743E5 40%, #03FB75 100%);
	}


	section
	{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	align-self: center;
	padding-left: 100px;
	padding-right: 100px;
	
	
	height: 75vh;
	width: 100%;

	}



	

	.contenedor-tarjeta-basica
	{
		width: 363px;
		height: 600px;
		border-radius: 20px;
		border: 3px solid #7A48DD;
		margin-top: 10vh;
		padding: 20px 20px 20px 20px;
	}
	.tarjeta
	{
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		height: 100%;
	
	}

	.price 
	{
		color: #7a48dd;
		font-weight: 700;
		font-size: xxx-large;
  	}
	.modelo{

		color: #7a48dd;
		font-weight: 500;
		font-size: 40px;
	
	}



	.duration 
	{
		color: #848484;
		align-self: start;
		font-weight: 500;
		white-space: nowrap;
		font-size: xx-large;
	}

	.fila{
		align-self: center;
		justify-content: center;
		align-items: left;
		
	}
	.imagen{

		object-fit: fill;

	}

	.switcher{
		display: flex;
		justify-content: flex-end;
		align-items: center;
		margin-right: 40px;
	}

	.title, .acp,  .green-word{
			display: flex;
			color:#ffff;
			font-size: 20px;
			font-weight: 400;
			text-align: left;
			word-spacing: 5px;
			justify-content: left;
			line-height: 1;
			list-style: none;
			}
		
		
			.description {
			  color: #fff;
			  font-weight: 200;
			  font-size: 24px;
			  font-weight: 400;
			
			  word-spacing: 2px;
			}
	
  
			
			button {
			color: #fff;
			width: 10em;
			
			font-size: 24px;
			font-weight: 400;
			border-radius: 50px;
			padding: 12px 10px;
			background-color: #55319d;
			transition: border 0.2s ease;
			}
			button:hover {
			color: #fff;
			/* background color gradint tuquesa (izquierda) a  rosa (derecha)*/
			background-image: linear-gradient(to right, #2ed5de,#2e74de, #d201d2);
			border-color: #000000;
			transition: 0.2s ease-in;
			}
		

			.icono {
			display: inline-block;
			

			
			width: 30px;
			height: 30px;
			align-self: center;
			
			}
			.image {
			display: inline-block;
		
			width: 70px;
			height: 70px;
			align-self: center;
		
			}


</style>