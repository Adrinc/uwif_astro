<style>
	.title, .best, .subtitle{
			color:#ffff;
			font-size: 100px;
			font-weight: 400;
			text-align: left;
			word-spacing: 5px;

			}
			.all{
				color: #7C47DD;
				font-size: 100px;
			}
			.subtitle{
				font-size: 66px;
				font-weight: 300;
				line-height: 160%;
				margin-top: 50px;
			}
			.image {
			display: inline-block;
			aspect-ratio: 1.1;
		
			width: 85px;
			height: 85px;
			margin-bottom: 35px;
			}

		
			.description {
			  color: #fff;
			  margin-top: 40px;
			  font-weight: 200;
			  font-size: x-large;
			}
		.overtopcarrusel{
			position: relative;
			
			bottom: 400px;
			left: 110px;
			width: 500px;
			height: 250px;
			z-index: 3;
		}
		.contenedor-imagenes{
			
			width: 100%;
			height: 100%;
			padding-top: 15vh;
		}
  
	
</style>