---
interface Props{
	marginTop:string;
}

const { marginTop  } = Astro.props;

---


<section style={`margin-top: ${marginTop};`}>
	<div class="main-container">
		<div class="columna-izquierda">
			<slot name="col-izquierda"/>
		</div>


		<div class="columna-derecha">
			<slot name="col-derecha"/>
		</div>

	</div>
</section>  


<style>

		section{
			display: flex;
			flex-direction: column;
			justify-content: space-between;

			height: 70vh;
			width: 100%;
			margin-left: 40px;
			margin-right: 40px;
		}

        .main-container {
			  display: grid;
			  grid-template-columns: 1fr 1.2fr;
			  justify-content: space-between;
			  align-content: space-between;
			  gap: 20px;
			
			}
			.columna-izquierda{
				display: flex;
				flex-direction: column;
				justify-content: space-between;
			  	align-items: space-between;
			  	
			}
			.columna-derecha{
				display: flex;
				flex-direction: column;
				justify-content: center;
			  	align-items: center;
			  	
			}
</style>