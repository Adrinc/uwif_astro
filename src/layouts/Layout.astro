---
// import FootUWIFI from '../components/global/foot/FootUWIFI.astro';
// import { ViewTransitions } from 'astro:transitions';
import FootUWIFI from "../components/global/foot/FootUWIFI.astro";
import Navbar from "../components/global/menu/Navbar.astro";

interface Props {
	showNavBar?: boolean;
	showFooter?: boolean;
	dataLayout: any;
	seoData?: any;
}

const {
	showNavBar = true,
	showFooter = true,
	dataLayout,
	seoData,
} = Astro.props;
const navData = dataLayout.data.generalMenu.data.attributes;
---

<!doctype html>
<html lang="en" transition:animate="slide">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="faviui.png" />
		<meta name="generator" content={Astro.generator} />
		{
			seoData == null ? null : (
				<>
					<title>{seoData["MetaTitle"]}</title>
					<meta name="title" content={seoData["MetaTitle"]} />
					<meta
						name="description"
						content={seoData["MetaDescription"]}
					/>
					<meta name="keywords" content={seoData["Keywords"]} />
				</>
			)
		}
		<!-- <ViewTransitions /> -->
	</head>

	<header class="w-full sticky top-0 z-20">
		{
			showNavBar && (
				<Navbar
					options={navData.MenuOptions}
					logo={navData.Logo}
					featButton={navData.FeatButton}
				/>
			)
		}
	</header>

	<body>
		<main class="overflow-hidden">
			<slot />
		</main>
	</body>

	{showFooter && <FootUWIFI />}


	<style is:global>
		@font-face {
			font-family: "Inter";
			src:
				url("/fonts/Inter.ttf") format("ttf"),
				url("/fonts/InterVariable.ttf") format("ttf"),
				url("/fonts/InterVariable.woff2") format("woff2");

			font-display: swap;
		}

		:root {
			--primary-color: #49be2b;
			--secondary-color: #5446e6;
			--tertiary-color: #ffffff;
			--cuaternary-color: #24a342;

			--primary-text-color: #ffffff;
			--secondary-text-color: #858585;
			--tertiary-text-color: #01c938;
			--primary-buttom-color: #01c938;

			--primary-bg-color: #111118;
			--secondary-bg-color: #e9e9e9;

			--primary-glass-color: #e9e9e91e;
			--secondary-glass-color: #4e4e4e41;

			--font-family-primary: "Inter", sans-serif;
			--font-family-secondary: "Inter", sans-serif;
			--accent: 136, 58, 234;
			--accent-light: 224, 204, 250;
			--accent-dark: 49, 10, 101;
			--accent-gradient: linear-gradient(
				45deg,
				rgb(var(--accent)),
				rgb(var(--accent-light)) 30%,
				white 60%
			);
		}

		*,
		*::before,
		*::after {
			box-sizing: border-box;
			text-overflow: ellipsis;
			font-family: var(--font-family-primary);
		}

		html {
			background: var(--primary-bg-color);
			box-sizing: border-box;
			scroll-behavior: smooth;
			color: white;
		}
		body {
			font-family: var(--font-family-primary);
		}
	</style>
</html>
