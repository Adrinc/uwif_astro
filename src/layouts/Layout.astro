---

/* import TopMenu from '../components/TopMenu.astro'; */
import TopMenu from '../components/react_components/TopMenu.jsx';
import TopMenuSuffle from '../components/header/TopMenuSuffle.astro';
import EsferasLuz from '../components/index/EsferasLuz.astro';
import FootUWIFI from '../components/global/FootUWIFI.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="faviui.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<header>


		<TopMenuSuffle />
	</header>
	<body>	
	<div id="top"></div>
	
	<EsferasLuz />

	<main>	
		<slot />
	</main>
	</body>
	<footer>
	<FootUWIFI />
	</footer>
</html>
<style is:global>
	@font-face {
  font-family: 'Inter';
  src: url('fonts/Inter.ttf') format('ttf');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
	:root {
		--primary-color: #00c207;
		--secondary-color: #7C47DD;
		--tertiary-color: #ffffff;

		--primary-text-color: #ffffff;
		--secondary-text-color: #858585;

		--primary-gradient: linear-gradient(to right, #03FB75, #06FFF0);
		--secondary-gradient: linear-gradient(to right, #5746E5, #8743E5);
		--tertiary-gradient: linear-gradient(to right, #5746E5, #8743E5, #00C637);

		--primary-bg-color: #13151a;
		--secondary-bg-color: #e9e9e9;

		--font-family: 'Inter', sans-serif;
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--fs-xl: clamp(3.5rem, 12vw + 1rem, 12rem);
		--fs-lg: clamp(1.25rem, 2vw, 1.5rem);
		--fs-md: clamp(1rem, 1.5vw, 1.25rem);
		--fs-sm: clamp(0.875rem, 1.25vw, 1rem);
		--fs-xs: clamp(0.75rem, 1vw, 0.875rem);
		--fs-xxs: clamp(0.625rem, 0.75vw, 0.75rem);
	}

	*, 
	*::before, 
	*::after{
		font-family: var(--font-family);
		box-sizing: border-box;
		text-overflow: ellipsis;
	
	}

	html {
		background: var(--primary-bg-color);

	overflow-x: hidden;
	-webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select:none;
    user-select:none;
	box-sizing: border-box;
	scroll-behavior: smooth;
	}
	body{
		font-family: var(--font-family);
		overflow: hidden;
	}



	header {
	  position: fixed;
	  top: 0;
	  left: 0;
	  width: 100%;
	  z-index: 100;
	}
	footer {
		padding-left: clamp(0px, 10vw, 100px);
		padding-right: clamp(0px, 10vw, 100px);
	}

  


</style>
