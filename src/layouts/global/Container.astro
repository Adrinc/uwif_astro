---
/* FLUTTER LIKE CONTAINER */
interface Props {
    key?: string;
    width?: number;
    height?: number;
    color?: string;
    backgroundImageUrl?: string;
    margin?: number;
    padding?: number;
    paddingTop?: number;
    paddingBottom?: number;
    paddingLeft?: number;
    paddingRight?: number;
    borderRadius?: number;
    borderRadiusTopLeft?: number;
    borderRadiusTopRight?: number;
    borderRadiusBottomLeft?: number;
    borderRadiusBottomRight?: number;
    borderAll?: number;
    borderTop?: number;
    borderRight?: number;
    borderBottom?: number;
    borderColor?: string;
    tailwind?: string;
}



let { 
    key,
    width=100,
    height=100,
    color="#transparent",
    backgroundImageUrl="",
    margin=0,
    padding=0,
    paddingTop=0,
    paddingBottom=0,
    paddingLeft=0,
    paddingRight=0,
    borderRadius=0,
    borderRadiusTopLeft=0,
    borderRadiusTopRight=0,
    borderRadiusBottomLeft=0,
    borderRadiusBottomRight=0,
    borderAll=0,
    borderTop=0,
    borderRight=0,
    borderBottom=0,
    borderColor="#000000",
    tailwind=""
    }: Props = Astro.props;

    paddingLeft = padding > 0 ? padding : paddingLeft;
    paddingRight = padding > 0 ? padding : paddingRight;
    paddingTop = padding > 0 ? padding : paddingTop;
    paddingBottom = padding > 0 ? padding : paddingBottom;
---

<div id={key} class={tailwind} style={`
--color: ${color};
--background-image-url: ${backgroundImageUrl};
--width: ${width}px;
--height: ${height}px;
--margin: ${margin}px;
--padding: ${paddingTop}px ${paddingRight}px ${paddingBottom}px ${paddingLeft}px;
--padding-top: ${paddingTop}px;
--padding-bottom: ${paddingBottom}px;
--padding-left: ${paddingLeft}px;
--padding-right: ${paddingRight}px;
--border-radius-all: ${borderRadius}px;
--border-radius-top-left: ${borderRadiusTopLeft}px;
--border-radius-top-right: ${borderRadiusTopRight}px;
--border-radius-bottom-left: ${borderRadiusBottomLeft}px;
--border-radius-bottom-right: ${borderRadiusBottomRight}px;
--border-all: ${borderAll}px;
--border-top: ${borderTop}px;
--border-right: ${borderRight}px;
--border-bottom: ${borderBottom}px;
--border-color: ${borderColor};

`}>
    <slot />
</div>

<style>
    div {
    
        width: var(--width);
        height: var(--height);
        border: var(--border-all) solid var(--border-color);
        margin: var(--margin);
        padding: var(--padding);
        background-color: var(--color);
        border-top-left-radius: var(--border-radius-top-left);
        border-top-right-radius: var(--border-radius-top-right);
        border-bottom-left-radius: var(--border-radius-bottom-left);
        border-bottom-right-radius: var(--border-radius-bottom-right);
        border-top: var(--border-top) solid var(--border-color);
        border-right: var(--border-right) solid var(--border-color);
        border-bottom: var(--border-bottom) solid var(--border-color);
        border-radius: var(--border-radius-all);

        
    
        
    }
</style>