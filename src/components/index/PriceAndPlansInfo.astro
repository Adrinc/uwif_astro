---
import SwitchMonthYear from '../toggles/SwitchMonthYear.astro';
---

<div class="content-wrapper">

    <div class="title">
        Plans & Pricing 
    </div>
    <div class="fila">
        <div class="description">
            Why pay more when you can have reliable 5G home internet at a reasonable price?
        </div>
        
        <div class="switcher">

            <SwitchMonthYear/>
        </div>	
    </div>
</div>

<style>



	.content-wrapper{
		display: grid;
		grid-template-columns: 1fr;
	

		margin-top: 15vh;
		margin-left: 100px;
		margin-right: 100px;
		gap: 40px;
	}
	.fila{
		display: grid;
		
		grid-template-columns: 1fr 1fr;
		justify-content: space-between;
		align-items: center;
		
	}
	.imagen{

		object-fit: fill;

	}

	.switcher{
		display: flex;
		justify-content: flex-end;
		align-items: center;
		margin-right: 40px;
	}

	.title, .acp,  .green-word{
			display: flex;
			color:#ffff;
			font-size: 90px;
			font-weight: 400;
			text-align: left;
			word-spacing: 5px;
			justify-content: left;
			line-height: 1;
			list-style: none;
			}
			.acp{
				color: #7C47DD;
				margin-left: 20px;
				margin-right: 20px;
			}
			.green-word{
				color: #00c402;
				display: flex;
				flex-direction: row;
				gap:20px;
				
			}

		
			.description {
			  color: #fff;
			  font-weight: 200;
			  font-size: 30px;
			
			  word-spacing: 2px;
			}
	
  
			
			button {
			color: #fff;
			width: 15em;
			font-size: 24px;
		
			font-weight: 200;
			border-radius: 50px;
			border: 3px solid #00c402;
			padding: 12px 10px;
			background-color: transparent;
			transition: border 0.2s ease;
			}
			button:hover {
			color: #fff;
			/* background color gradint tuquesa (izquierda) a  rosa (derecha)*/
			background-image: linear-gradient(to right, #2ed5de,#2e74de, #d201d2);
			border-color: #000000;
			transition: 0.2s ease-in;
			}
		

			.icono {
			display: inline-block;
			
			}
			.image {
			display: inline-block;
		
			width: 70px;
			height: 70px;
			align-self: center;
		
			}


</style>