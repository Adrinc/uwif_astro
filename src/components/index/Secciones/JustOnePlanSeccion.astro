---
import TarjetaPaqueteEspecial from '../../TarjetaPaqueteEspecial.astro';
import PriceAndPlansInfo from '../PriceAndPlansInfo.astro';

let listas = [
  { icono: 'image/checkwhite.svg', texto: '5G Wi-Fi Gateway device included' },
  { icono: 'image/checkwhite.svg', texto: 'Netflixâ„¢ ON USApps' },
  { icono: 'image/checkwhite.svg', texto: 'Apple TV+ ON US' },
  { icono: 'image/checkwhite.svg', texto: '5G Speeds' },
  { icono: 'image/checkwhite.svg', texto: 'Mexico and Canada no extra fees' },
];
---


<section id="plan">
  <PriceAndPlansInfo />
  <div class="main-container">

  
<div class="columna-izquierda">


   <div class="title">
     JUST <span class="text-primaryColor">ONE</span> PLAN?
   </div>
   <div class="description">
     <p>Yes, we make it  <span class="text-secondaryColor font-bold">simple.</span> </p>
   </div>
 
   <p class="description">Discover perfection in simplicity. Our single subscription has it all, without the hassle</p>
   <p class="description-inferior">Only the best for </p>
 </div>

<div class="columna-derecha">
	<span class="green-ball-blured" id="ball3"></span>
    <TarjetaPaqueteEspecial precio="30" modelo="Value" description="The best value for your money." lista={listas}/>
</div>
</div>
</section>


<style>
  .green-ball-blured{
    top: 0%;
		left: -30%;
		position: absolute;
    width: clamp(0px, 50vw, 700px);
		height: clamp(0px, 50vw, 700px);
		border-radius: 100%;
    rotate: -90deg;
    background: linear-gradient(#5746E5 20%, #48e543 40%, #03FB75 50%);
		filter: blur(100px);
		z-index: -1;
	}
  section {
  display: flex;
  flex-direction: column;
	justify-content: space-between;
  align-items: center;
  }
  .main-container{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: clamp(0px, 10vw, 100px);
    gap: 1rem;
  }
  
  .columna-izquierda{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: left;
    width: 100%;
    height: 60vh;
  }
  
  .columna-derecha{
    position:relative;
    display: flex;
    flex-direction: column;
    align-content: flex-start;
    align-items: center;
    width: 50%;
  
  }


  .description 
  {
    color: var(--primary-text-color);
		font-size: clamp(1.5rem, 3vw, 50px);
    font-weight: 100;
    text-align: left;

  }
  .description-inferior 
  {
    color: var(--primary-text-color);
		font-size: clamp(1.5rem, 4vw, 30px);
    font-weight: 100;
    text-align: left;

  }


	.title{
    
      color: var(--primary-text-color);
			font-size: clamp(1.5rem, 3vw, 80px);
			font-weight: bold;
			}


  @media (max-width: 768px) {
    .main-container {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

	.title{
    
    color: var(--primary-text-color);
    font-size: clamp(1.5rem, 3vw, 80px);
    font-weight: bold;
    text-align: center;
    }
    .description, .description-inferior 
  {
    text-align: center;
  }
  }
</style>