const { url} = Astro.props;

console.log(url);
---
<section id="home">
    <video  autoplay muted loop id="myVideo"  transition:persist>
        <source src={"https://strapi.iamet.cbluna-dev.com"+url} type="video/mp4">
    </video>

<div class="botones-back-column">
	<div class="botones-back">
		<BuyOrApplyFree />
	</div>

</div>


	
</section>
		  
	<style>

		section{
		
			position: relative;
			box-sizing: border-box;
			margin-top: 80px;
			height: 80vh;
		}
		.botones-back-column{
			position: absolute;
			display: flex;
			flex-direction: column;
			justify-content: flex-end;
			align-items: center;
			height: 100%;
        	
		
		
		}
		.botones-back{
			flex-direction: row;
		
			background-color: #000000b3;
		
			display: flex;
			align-items: center;
			border-radius: 0 50px 50px 0;
			padding: 16px;
			margin-bottom: clamp(10px, 5vw, 80px);
		
		}
		.texto-or{
			font-size: clamp(10px, 20vw, 24px);
		}	
		#myVideo {
		position: absolute;
        right: 0;
        bottom: 0;
	
		width: 100vw;
        height: 100%;
		object-fit: cover;
		z-index: -1;
		}
		main{
			padding-left: clamp(0px, 5vw, 100px);
			padding-right: clamp(0px, 5vw, 100px);
		}

	
			@media (max-width: 768px) {
				.botones {
				flex-direction: column;
				align-items: center;
				bottom: 5%;
				gap: clamp(4px, 15vw, 20px);
		
				}
		
			}
			@media  screen and (height< 450px) {
				section{
		
					padding-top: clamp(200px, 50vh, 400px);
					margin-bottom: clamp(200px, 50vh, 300px);
				}
				.botones {
				flex-direction: column;
				align-items: center;
				bottom: 5%;
				
		
				}
			}
			
	
 </style>