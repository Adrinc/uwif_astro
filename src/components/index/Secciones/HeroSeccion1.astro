---

import { setURL } from "../../../data/constants";
import ButtonList from "../../global/ButtonList.astro";
import BuyOrApplyFree from "../../global/BuyOrApplyFree.astro";
import Markdown from "../../global/Markdown.astro";
import CarouselSection from '../../index/Secciones/CarouselSection.astro';


interface Props{
    sectionData: any;
}
const{ sectionData } = Astro.props;

const buttons = sectionData['HeroButtons'];
const slides = sectionData['Slides'];
---

<section id="home" class="relative">
	<div class="block" id="mySlider">
		<CarouselSection slidesContent={slides}/>
	</div>

<div class="absolute flex flex-col w-full h-full items-center justify-between place-content-center md:py-[3vh]">
	<div class="rounded-b-full bg-black/30 backdrop-blur-md border border-white/10 py-3 md:py-10 px-10 md:px-20  md:mx-10">
		<Markdown textAlign="text-center" classN={"leading-none"} content={sectionData['Title']}/>
	</div>
	<div class="botones-back md:rounded-full rounded-3xl bg-black/40 backdrop-blur-lg border border-white/20">
		{buttons && 
                <ButtonList buttons={buttons} />
            }
	</div>

</div>


	
</section>
		  
	<style>

		section{
		
			position: relative;
			display: flex;
			flex-direction: column-reverse;
			flex: 1;
			margin-top: 80px;
			width: 100vw;
			height: 90vh;
		}
		.botones-back-column{
			display: flex;
			align-items: center;
		
        	
		
		
		}
		.botones-back{
			flex-direction: row;
			display: flex;
			align-items: center;
			padding: 16px;
			margin-bottom: clamp(10px, 2vw, 80px);
		
		}
		.texto-or{
			font-size: clamp(10px, 20vw, 24px);
		}	
		#mySlider {
		position: absolute;
       
		width: 100vw;
        height: 100%;
		object-fit: cover;
		z-index: -1;
		}
		main{
			padding-left: clamp(0px, 5vw, 100px);
			padding-right: clamp(0px, 5vw, 100px);
		}

	
			@media (max-width: 768px) {
				.botones {
				flex-direction: column;
				align-items: center;
				bottom: 5%;
				gap: clamp(4px, 15vw, 20px);
		
				}
		
			}
	
	
 </style>