---

import BuyOrApplyFree from "../../global/BuyOrApplyFree.astro";
import {strapiURL} from '../../../services/graphql.ts';
interface Props {
	urlVideoWeb: string;
	urlVideoMobile: string;
	buttonText1?: string;
	buttonText2?: string;
	buttonLink1?: string;
	buttonLink2?: string;
}
const { urlVideoWeb, urlVideoMobile, buttonLink1, buttonLink2, buttonText1, buttonText2 } = Astro.props;


---
<section id="home">
     <!-- Video para pantallas grandes -->
	 <video class="block md:hidden" autoplay muted loop id="myVideo" transition:persist>
		<source src="videos/u-wifi-opener-prod-mobile.mp4" type="video/mp4">
	</video>

	<!-- Video para pantallas pequeÃ±as -->
	<video class="hidden md:block" autoplay muted loop id="myVideoMobile" transition:persist>
		<source src=`${strapiURL}${urlVideoWeb}` type="video/mp4">
	</video>

<div class="botones-back-column">
	<div class="botones-back">
		<BuyOrApplyFree
			buttonText1={buttonText1}
			buttonLink1={buttonLink1}
			buttonText2={buttonText2}
			buttonLink2={buttonLink2}
		/>
	</div>

</div>


	
</section>
		  
	<style>

		section{
		
			position: relative;
			display: flex;
			flex-direction: column-reverse;
			flex: 1;
			margin-top: 80px;
			width: 100vw;
			height: 80vh;
		}
		.botones-back-column{
			position: absolute;
			display: flex;
			flex-direction: column;
			justify-content: flex-end;
			align-items: center;
		
        	
		
		
		}
		.botones-back{
			flex-direction: row;
		
			background-color: #000000b3;
		
			display: flex;
			align-items: center;
			border-radius: 0 50px 50px 0;
			padding: 16px;
			margin-bottom: clamp(10px, 5vw, 80px);
		
		}
		.texto-or{
			font-size: clamp(10px, 20vw, 24px);
		}	
		#myVideo, #myVideoMobile {
		position: absolute;
       
		width: 100vw;
        height: 100%;
		object-fit: cover;
		z-index: -1;
		}
		main{
			padding-left: clamp(0px, 5vw, 100px);
			padding-right: clamp(0px, 5vw, 100px);
		}

	
			@media (max-width: 768px) {
				.botones {
				flex-direction: column;
				align-items: center;
				bottom: 5%;
				gap: clamp(4px, 15vw, 20px);
		
				}
		
			}
	
	
 </style>