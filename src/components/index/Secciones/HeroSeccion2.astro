---
import Moden from '../../global/animations/ThreeFiber/scene3D/ModenScene/Main3D';
import Paragraph from '../../global/Paragraph.astro';
import ShapeBackground from '../../global/ShapeBackground.astro';

interface Props{
    strapiData: any;
}
const{ strapiData } = Astro.props;


const paragraphContent = strapiData['pageData']['data']['pageHome']['data']['attributes']['PrimaryParagraph'];
---
<section id="#bestinternet">
	<span class="green-ball-blurred"/>
	<span class="purple-ball-blurred"/>
	<Paragraph headings={paragraphContent.Headings} textBlock={paragraphContent.Textblock} logo={paragraphContent.IconLogo}>
		<div  class="flex items-center justify-center m-3">
			<div class="absolute">
				<ShapeBackground/>
			</div>
			<div class=" h-[400px] flex relative inset-0">
				<Moden client:visible transition:persist/>
			</div>
		</div>
	</Paragraph>
</section>
		  
<style>
	.green-ball-blurred{
		position: absolute;
		top: 23%;
		left: 15%;
		width: clamp(250px, 15vw, 350px);
		height: clamp(250px, 15vw, 350px);
		border-radius: 100%;
		rotate: -45deg;
		filter: blur(100px);
		z-index: -1;
		background: linear-gradient(#03fb77a0 20%, #8743e56a 40%, #2356ff89 100%);
	}
	
	.purple-ball-blurred{
		position: absolute;
		top: 7%;
		right: 10%;
		width: clamp(300px, 30vw, 500px);
		height: clamp(300px, 30vw, 500px);
		border-radius: 100%;
		rotate: -45deg;
		filter: blur(80px);
		z-index: -10;
		background: linear-gradient( #8743e5d6 0%, #8743e58e 60%, #2356ff89 100%);
	}		
 </style>