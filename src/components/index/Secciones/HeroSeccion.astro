---
import Moden from '../../Scene3D/ModenScene/Main3D';
import BotonFlecha from '../../global/BotonFlecha.astro';

---
<section>


	<main class="flex flex-row gap-4 box-border">
		<div class="columna-izquierda" >

			<div>
				<div><span class="title">The<span class="text-primaryColor"> best </span> internet</span></div>
				<div><span class="subtitle">connection for  <img class="image" loading="lazy" srcset="faviui.png"/></span></div>
				<p class="description">In our fast-paced world, imagine a high-speed mobile internet service that keeps you connected seamlessly and outpaces the competition, all at a pleasantly surprising cost!</p>
			</div>
	

			<BotonFlecha texto="Check Availability" link="/"/>
		</div>

		<div class="flex justify-center items-center">
			<div  class="moden"><Moden client:visible transition:persist/></div>
		</div>
	</main>
</section>
		  
	<style>

	
		section{
			display: flex;
			flex-direction: column;
			justify-content: center;
			box-sizing: border-box;
			padding-left: clamp(0px, 5vw, 100px);
			padding-right: clamp(0px, 5vw, 100px);
			padding-top: 100px;
			padding-bottom: 100px;
			
			height: 90vh;
			
		}
		.columna-izquierda{
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			
			gap: 2rem;
			box-sizing: border-box;
		
		}

			.title, .best, .subtitle{
			color: var(--primary-text-color);
			font-size: clamp(40px, 5vw, 100px);
			font-weight: 400;
			letter-spacing: 2px;
			text-align: left;
			word-spacing: 5px;
			text-wrap: balance;

			}
	
			.subtitle{
			
				font-weight: 300;
				line-height: 160%;
				margin-top: 50px;
			}
		
		  
			.image {
			display: inline-block;
			aspect-ratio: 1.1;
		
			width: clamp(2.5rem, 5vw, 5.3rem); 
			height: clamp(2.5rem, 5vw, 5.3rem);
			margin-bottom: 2rem;
			}

			.icono {
			display: inline-block;
			aspect-ratio: 1.1;
			}
			
			

			.moden{
			width: clamp(280px, 60vw, 700px);
			height: clamp(280px, 50vw, 600px);
		
			}
			
			.description {
			  color: var(--primary-text-color);
			  font-weight: 300;
			  text-wrap: pretty;
			  font-size: clamp(1rem, 1.3vw, 1.5rem);
			}

			.cta-text {
			  justify-content: center;
			  color: var(--primary-text-color);
			  text-align: center;
			  align-self: center;
			  font-size: clamp(14px, 1.5vw, 1.5rem);
			  font-weight: 200;
			}
	
			@media (max-width: 768px) {
				main {
				flex-direction: column;
				align-items: center;
				gap: 1rem;
				}
			.moden{
			width: 100vw;
			height: clamp(280px, 50vw, 500px);
	
			}
			}
	
 </style>