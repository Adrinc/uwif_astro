---
import { setURL } from '../../../data/constants';
import RiveComponent from '../../global/animations/Rive/riveComponent';



interface Props{
    strapiData: any;
}
const{ strapiData } = Astro.props;


const bento = strapiData['pageData']['data']['pageHome']['data']['attributes']['BentoGrid'];

//Si el ancho de la pagina es menor a 768px el artboart del componente rive sera: Desktop, en caso contrario sera Tablet

---

<section id="#bentogrid" class="w-full h-50 flex items-center justify-center">

 <div class="wtfaq web">

     <RiveComponent 
     src="/rive/bento.riv" 
     stateMachines="State Machine 1"
     artboard="Main_bento_Desktop"
     autoplay={true} 
     transition:persist 
     client:only/>
</div>

 <div class="wtfaq tablet">
    <RiveComponent 
    src="/rive/bento.riv" 
    stateMachines="State Machine 1" 
    artboard="Main_bento_Mobile"
    autoplay={true} 
    transition:persist 
    client:only/>

</div>



</section>
		  
	<style>


section{
		
        display: flex;
        flex-direction: column;
        justify-content: center;
        box-sizing: border-box;
        padding-left: clamp(0px, 5vw, 100px);
        padding-right: clamp(0px, 5vw, 100px);
        margin-top: 100px;
        margin-bottom: 100px;
        height: 80vh;
        
    }
    .wtfaq{
        width: 100%;
        height: 1000px;      
    }
    .tablet{


        display: none;
    }
    img{
        width: 100%;
        height: 100%;
    }

        @media (max-width: 768px) {

section{
    margin-top: 0px;
        margin-bottom: 0px;
        height: 30vh;
}            
.web{
                display: none;
            }
            .tablet{
                display: block;
            }
   
          
        }
    

	
 </style>