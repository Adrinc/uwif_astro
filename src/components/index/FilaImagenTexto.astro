---

interface Props{
    image:string;
	title:string;
    subtitle:string;
    flex:string;
}

const { image, title, subtitle, flex  } = Astro.props;


---
  <div class="fila-imagen-texto" style={flex}>
        <img src={image} />
        <div class="columna">
            <p class="title-columna">
                {title}
            </p>
            <p class="subtitle-columna">
                {subtitle}
            </p>
        </div>
  </div>

<style>

    .columna{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        align-content: center;
        width: 100%;
        height: 100%;
        text-wrap: pretty;
    
    }

    .title-columna{
    color:#ffff;
    font-size: clamp(1.5rem, 5vw, 50px);
    font-weight: 600;
    text-wrap: balance;
    }
    .subtitle-columna{
    color:#ffff;
    font-size: clamp(1.5rem, 10vw, 30px);
    font-weight: 400;
    text-wrap: pretty;
    }

    .fila-imagen-texto{
        display: flex;
  
        justify-content: space-between;
        align-items: center;
        align-content: center;
        width: 100%;
        text-align: left;
        text-wrap: pretty;

      
        gap: clamp(0px, 5vw, 50px);
    }
    img{
        width: clamp(0px, 50vw, 150px);
        height: clamp(0px, 50vh, 350px);
    }
</style>