---
import LayoutSecciones from '../../layouts/index/LayoutSecciones.astro';
---




<LayoutSecciones marginTop='-5vh'>
		
		
    <div slot="col-izquierda">
        <div class="contenedor-izquierda">
            <img src="image/uocio.png" class="imagen">

        </div>	
    </div>



    <div slot="col-derecha">
        <div class="contenedor-derecha">
            <div>

                <span class="title">Everything</span>
                <span class="green-word"> for <img class="image" loading="lazy" srcset="faviui.png"/></span> 
            </div>
            

                <p class="description">Access your favorite content anywhere with our super fast connection! Enjoy a seamless experience, wherever you are.</p>
        
                <button>Check Coverage <img class="icono" src="image/arrowright.svg" > </button>
        </div>

    </div>

</LayoutSecciones>



<style>

	.contenedor-derecha{
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: left;
		max-width: 45em;
	
		padding-right: 40px;
		gap: 40px;
		
	}
	.contenedor-izquierda{
		

	
		width: 100%;

		
	}
	.imagen{

		object-fit: fill;

	}


	.title, .acp,  .green-word{
			display: flex;
			color:#ffff;
			font-size: 90px;
			font-weight: 400;
			text-align: left;
			word-spacing: 5px;
			justify-content: left;
			line-height: 1;
			list-style: none;
			}
			.acp{
				color: #7C47DD;
				margin-left: 20px;
				margin-right: 20px;
			}
			.green-word{
				color: #00c402;
				display: flex;
				flex-direction: row;
				gap:20px;
				
			}

		
			.description {
			  color: #fff;
			  font-weight: 200;
			  font-size: 30px;
			
			  word-spacing: 2px;
			}
	
  
			
			button {
			color: #fff;
			width: 15em;
			font-size: 24px;
		
			font-weight: 200;
			border-radius: 50px;
			border: 3px solid #00c402;
			padding: 12px 10px;
			background-color: transparent;
			transition: border 0.2s ease;
			}
			button:hover {
			color: #fff;
			/* background color gradint tuquesa (izquierda) a  rosa (derecha)*/
			background-image: linear-gradient(to right, #2ed5de,#2e74de, #d201d2);
			border-color: #000000;
			transition: 0.2s ease-in;
			}
		

			.icono {
			display: inline-block;
			
			}
			.image {
			display: inline-block;
		
			width: 70px;
			height: 70px;
			align-self: center;
		
			}


</style>