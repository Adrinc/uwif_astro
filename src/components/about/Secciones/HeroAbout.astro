---
import { setURL } from "../../../data/constants";
import BotonFlecha from "../../global/BotonFlecha.astro";
// import Markdown from "../../global/Markdown.astro";
interface Props{
    strapiData: any;
}
const{ strapiData } = Astro.props;


const headData = strapiData.pageData.data.pageAboutUs.data.attributes;
const buttons = headData.Header.Buttons;
---


<section id="heroabout" class="w-full flex items-center justify-center">
		<div class="max-w-[1500px] m-10 flex md:flex-row flex-col bg-gradient-to-l from-primaryColor rounded-[50px] items-center px-10 justify-between gap-10">
			<div class="">
				<h2 class="md:px-10 md:py-5 p-6 font-bold tracking-[-0.5px] md:text-[40px] text-[25px] md:text-start text-center">{headData.Header.Headings[0].Heading}</h2>
				<div class="flex flex-wrap gap-5 px-10">

					{
						buttons.map((button: any) => (
							<BotonFlecha texto={button.Text} link={button.Link}/>
						))
					}				
				</div>
			</div>
				<img class="max-h-[400px] object-contain" src={`${setURL(headData.Header.Media.data.attributes.url)}`} alt={headData.Header.Media.data.attributes.alternativeText}>
		</div>
	
</section>


<style>
	.contenedor
	{
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		border-radius: 10px;
		background: radial-gradient(50% 50% at 50% 50%, #5bcf84 0%, #00b33e 100%);
		height: 80%;
	}

</style>