---
import BotonFlecha from "../../global/BotonFlecha.astro";
---


<section id="heroabout">

		<div class="contenedor">
			<div class="columnaIzquierda">
				<p class="title ">
					Enhancing wireless excellence with every upgrade, while keeping it affordable.
					Our Success Numbers
					
				</p>

				<div class="botones">
	
					<BotonFlecha texto="Read more" link="/signup"  backgroundColor="#7f44e5" borderColor="transparent" iconColor="#ffffff"  fontweight="500"/>
					<BotonFlecha texto="Contact us" link="/contact"  borderColor="#ffffff" iconColor="#ffffff" fontweight="500"/>
				</div>
			</div>

			<img src="/image/manwhitmac.png" alt="man with mac">
		</div>
		<span class="green-ball-blured"></span>
	
</section>


<style>
	.botones{
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		gap: 16px;

	
	}
	 .green-ball-blured{
    top: -10%;
	left: 0;
	position: absolute;
    width: clamp(0px, 50vw, 1000px);
	height: clamp(0px, 50vw, 1000px);
	border-radius: 100%;
    background: linear-gradient(0deg, #02572b 0%, #02572a 100%);
	filter: blur(100px);
    opacity: 0.8;
	z-index: -1;
	}
	section
	{
		position: relative;
		display: flex;
		flex-direction: column;
		justify-content: center;
		box-sizing: border-box;
		padding-left: clamp(0px, 5vw, 100px);
		padding-right: clamp(0px, 5vw, 100px);
		margin-top: 150px;
		padding-bottom: 100px;
		height: 90vh;
	}
	img{
		width: 50%;
		height: 100%;
		object-fit: contain;
	}
	.columnaIzquierda{
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		width:50%;
		height: 100%;
		padding: clamp(8px, 5vw, 50px);
	}
	.contenedor
	{
		display: flex;
		flex-direction: row;
		justify-content: space-between;

		
		
		border-radius: 10px;
		background-color: #00b33e;
		height: 100%;
		max-height: 600px;
		
	}
	.title{
			color: var(--primary-text-color);
			font-size: clamp(16px, 4vw, 50px);
			font-weight: 600;
			
			text-align: left;
			text-wrap: balance;
			text-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);
			
			}







	@media (max-width: 900px) 
	{
		.contenedor
		{
			flex-direction: column-reverse;
			align-items: center;
			height: 100%;
		
			padding: 16px;
			max-height: 100%;
		}
		.botones{
			flex-direction: column;
			align-items: center;
			
			gap: 16px;
		}
		.columnaIzquierda{
			align-items: center;
			text-align: center;
			padding: 16px;
			width: 100%;
		}
		img{
		width: clamp(100px, 50vw, 200px);
		object-fit: contain;
		align-self: center;
		margin-right: 50px;
	}
	.title{
		text-align: center;
		
	}
	}
	@media screen and (height< 450px) 
	{

		
	}
			





</style>