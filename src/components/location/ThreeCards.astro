<!-- a div flex row with 3 boxes diferent colors, each box has a flex column inside with a image and a text -->
<div class="flex-row">
    <div id="box1" class="flex-column">
        <img src="/icons/cart.svg" alt="box1">
        <p class="title">Buy</p>
        <span class="green-ball-blured-behind"></span>
    </div>
    <div id="box2" class="flex-column">
        <img src="/icons/Camion.svg" alt="box2">
        <p class="title">Free</p>
        <p class="subtitle">2 Day Shipping</p>
        <span class="blue-ball-blured-behind"></span>
    </div>
    <div id="box3" class="flex-column">
        <img src="/icons/Conection.svg" alt="box3">
        <p class="title">Plug & Play</p>
        <span class="purple-ball-blured-behind"></span>
    </div>
</div>



<style>
    .green-ball-blured-behind {
        position: absolute;
        top: 50;
        left: 50;
        width: 80%;
        height: 80%;
        background-color:#0c5406;
        border-radius: 50%;
        z-index: -1;
        filter: blur(50px);
    }
    .blue-ball-blured-behind {
        position: absolute;
        top: 50;
        left: 50;
        width: 80%;
        height: 80%;
        background-color:#3465ac;
        border-radius: 50%;
        z-index: -1;
        filter: blur(50px);
    }
    .purple-ball-blured-behind {
        position: absolute;
        top: 50;
        left: 50;
        width: 80%;
        height: 80%;
        background-color:#5b39a7;
        border-radius: 50%;
        z-index: -1;
        filter: blur(50px);
    }

    .flex-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        height: 30vh;
        margin-bottom: 100px;
        padding-left: clamp(0px, 5vw, 100px);
		padding-right: clamp(0px, 5vw, 100px);
        margin-bottom: 100px;
    }

    .flex-column {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        vertical-align: middle;
        border-radius: 25px;
        width: 25%;
        height: 100%;
        padding: clamp(10px, 2vw, 20px);
        
        position:relative;
        background-color: #8585851b;
        background-filter: blur(50px);
        
    }
    .title {
			color: var(--primary-text-color);
			font-size: clamp(24px, 5vw, 40px);
			font-weight: 800;
			text-align: center;
    }
    .subtitle {
        color: var(--primary-text-color);
        font-size: clamp(16px, 3vw, 24px);
        font-weight: 500;
        text-align: center;
    }
    img {
        width: 50%;
        height: 50%;
    }
    #box1{
        border: 2px solid #0c540679;
    }
    #box2{
        border: 2px solid #3465ac79;
    }
    #box3{
        border: 2px solid #5b39a779;
    }

    @media (max-width: 900px) 
	{
        .flex-row {
            flex-direction: column;
            height: auto;
            gap: 20px;
        }
        .flex-column {
            width: 80%;
            height: 250px;
            margin-bottom: 20px;
        }


    }
</style>