---
import BotonFlecha from "../../global/BotonFlecha.astro";
import Markdown from "../../global/Markdown.astro";

---


<section id="heroLocation" class="w-full flex items-center justify-center">
	

	<div class="contenedor max-w-[1200px] my-[150px] flex flex-col items-center justify-center rounded-[35px] bg-gradient-to-r from-[#22D05D] to-[#008837] p-10">
		<Markdown content="# U-wifi in **Astro Valley**" />
		<Markdown textAlign="text-center" classN="m-10" content="Fast, reliable and unlimited internet access tailored for Astro Valley Resident" />
		
		<div class="flex flex-row w-full gap-5">
		<div class="flex flex-col gap-4 bg-black/30 p-4 w-full items-center rounded-[20px]">
			<div class="text flex flex-wrap items-center gap-2">
				<p class="font-extrabold text-7xl text-primaryTextColor">$30</p>
				<p class="text-left text-lg text-white font-light">/month with  <br> Autopay</p>
			</div>
			<BotonFlecha link="/contact" texto="BUY NOW" borderColor="#ffffff" iconColor="#ffffff" width="100%"/>
		</div>

		<div class="flex flex-col gap-4 bg-black/30 p-4 w-full items-center rounded-[20px]">
			<div class="text flex flex-wrap items-center gap-2">
				<p class="font-extrabold text-7xl text-primaryTextColor">Free</p>
				<p class="text-left text-lg text-white font-light">for ACP <br> Subscribers</p>
			</div>
			<BotonFlecha link="/contact" texto="APPLY FOR FREE WI-FI" backgroundColor="#7C47DD" borderColor="#ffffff" iconColor="#ffffff" width="100%"/>
		</div>
	</div>

		
		
	</div>
			
	
</section>


<style>


	.title{
			color: var(--primary-text-color);
			font-size: clamp(24px, 5vw, 75px);
			font-weight: 300;
			text-align: left;
			text-wrap: pretty;
			text-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);
			
		}
	.description{
		color: var(--primary-text-color);
		font-size: clamp(14px, 5vw, 50px);
		font-weight: 300;
		text-align: center;
		text-wrap: pretty;
		text-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);
	}
	.twoColumns{
		display: flex;
		flex-direction: row;
		justify-content: space-evenly;
		align-items: center;
		width: 100%;
		height: 100%;
		gap:50px;
	}
	.columnL{
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		align-items: center;
		box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);
		background-color: rgba(0, 0, 0, 0.3);
		background-filter: blur(10px);
	}
	.columnLRow1{
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: center;
		vertical-align: middle;
		gap: 10px;
		width: 100%;
	}
	.columnR{
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		align-items: center;
		border: 3px dashed var(--primary-text-color);
		box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);
		background-color: rgba(0, 0, 0, 0.3);
		background-filter: blur(10px);
	}
	.columnL, .columnR{
		border-radius: 10px;
		width: 100%;
		height: 100%;
	}







	@media (max-width: 900px) 
	{
		section{
			 height: 100vh;
		}
		.contenedor
		{
			flex-direction: column-reverse;
			align-items: center;
			height: 100vh;
			padding: 16px;
		
		}
	.title{
		text-align: center;
		
	}
	}

	@media (height < 500px) 
	{
		.title{
			font-size: clamp(14px, 3vw, 20px);
		}
		.contenedor
		{
			height: 100vh;
		}

	}


</style>