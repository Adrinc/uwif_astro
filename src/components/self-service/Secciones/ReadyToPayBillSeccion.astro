---
import BotonFlecha from "../../global/BotonFlecha.astro"


interface Props{
    strapiData: any;
}
const{ strapiData } = Astro.props;

const BillParagraph = strapiData.pageData.data.pageSelfServ.data.attributes.BillParagraph;
const Headings = BillParagraph.Headings[0].Heading;
const Buttons = BillParagraph.Buttons;
/* const MediaImage = BillParagraph.Media.data.attributes.url;
const alternativeText = BillParagraph.Media.data.attributes.alternativeText; */

---




<section id="readytopaybill">
    
    <div class="contenedor">
          
                <h1 class="title">{Headings}</h1>
           <!--      <h2 class="subtitle">You can also set up AutoPay or arrange to split your bill into two payments.</h2> -->
        
                <div class="main-row-contenedor">

                    <div class="columnaIzquierda">
                        <img src="/image/phone.svg" alt="">
                        <div class="row-buttons">
                            
                            <BotonFlecha texto={Buttons[0].Text} link={Buttons[0].Link}  />
                            <BotonFlecha texto={Buttons[1].Text} link={Buttons[1].Link}  />
                            
                        </div>
                    </div>

                    <div class="columnaDerecha">
                        <img src="/image/monitor.svg" alt="">
                        <div class="row-buttons">
                            <BotonFlecha texto={Buttons[2].Text} link={Buttons[2].Link}  />
                        </div>
                    </div>
                </div>

            
    </div>
   
        <span class="green-ball-blured"></span>

</section>


<style>

section
	{
        position: relative;
		display: flex;
		flex-direction: column;
		justify-content: space-around;
        align-items: center;
		padding-left: clamp(0px, 5vw, 100px);
		padding-right: clamp(0px, 5vw, 100px);
		
        margin-bottom: 100px;
       
	}
    .main-row-contenedor
    {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
        width: 80%;
    }
    .columnaIzquierda{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
      
      
    }
    .columnaDerecha{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        
        width: 100%;
        height: 100%;
    
   
    }
    .green-ball-blured{
    top: 20%;
	left: 70%;
	position: absolute;
    width: clamp(0px, 50vw, 700px);
	height: clamp(0px, 50vw, 700px);
	border-radius: 100%;
    background: linear-gradient(0deg, #057e41 0%, #02572a 100%);
	filter: blur(100px);
    opacity: 0.7;
	z-index: -1;
	}
    .contenedor
    {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 80px;
        width: 100%;
        border-radius: 15px;
    
    }
    .row-title
    {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
        padding-left: 15%;
        padding-right: 15%;
     
    }
    .row-buttons
    {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        
        width: 100%;
        gap: 20px;
       
    }
   
    hr.rounded {
    border-top: 5px solid var(--cuaternary-color);
    border-radius: 5px;
    width: 100px;
    margin-bottom: 10px;
    }
    h1.title
    {
        font-size: clamp(18px, 5vw, 60px);
        font-weight: 600;
        color: var(--primary-text-color);
        text-align: center;
    }
    h2.subtitle
    {
        font-size: clamp(14px, 5vw, 30px);
        font-weight: 400;
        color: var(--primary-text-color);
        text-align: center;
        width: 70%;
    }
    .description 
    {
       position: relative;
	    color: var(--primary-text-color);
		font-weight: 300;
		text-wrap: pretty;
		font-size: clamp(16px, 3vw, 25px);
        
        width: 50%;
	}



    @media (max-width: 768px)
    {
        section{
		padding-left: clamp(0px, 5vw, 50px);
		padding-right: clamp(0px, 5vw, 50px);
		}
        .main-row-contenedor
        {
            flex-direction: column;
            gap: 50px;
            width: 100%;
        }
    }
</style>