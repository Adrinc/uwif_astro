---
import BotonFlecha from "../../global/BotonFlecha.astro"

let buttons = [
    {
        texto: "Have an account? Login ",
        link: "#"
    },
    {
        texto: "Create my account ",
        link: "#"
    },
    {
        texto: "Reset my password ",
        link: "#"
    }
]
---




<section id="simpletoolsstart">
    
    <div class="contenedor">
          
        <h1 class="title">Letâ€™s get started</h1>
        <h2 class="subtitle">Log in to manage your account, upgrade your plan, or shop for new phones.</h2>
        
        <div class="row-buttons">
            {
                buttons.map((buttons) => (
                    <BotonFlecha {...buttons} marginTopIncon="5px" paddingleft="30px" borderColor="transparent" borderColorHover="transparent" gradientColorCenter="transparent" gradientColorLeft="transparent" gradientColorRight="transparent"  fontweight="500" iconColor="var(--tertiary-color)" fontsize="30px" textColorHover="var(--tertiary-text-color)" />
                ))
            }
        </div>

    </div>
   
        <span class="green-ball-blured"></span>

</section>


<style>

section
	{
        position: relative;
		display: flex;
		flex-direction: column;
		justify-content: space-around;
        align-items: center;
		padding-left: clamp(0px, 5vw, 100px);
		padding-right: clamp(0px, 5vw, 100px);
        margin-bottom: 100px;
       
	}
    .green-ball-blured{
    top: 20%;
	left: 70%;
	position: absolute;
    width: clamp(0px, 50vw, 700px);
	height: clamp(0px, 50vw, 700px);
	border-radius: 100%;
    background: linear-gradient(0deg, #057e41 0%, #02572a 100%);
	filter: blur(100px);
    opacity: 0.7;
	z-index: -1;
	}
    .contenedor
    {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 50px;
        width: 100%;
        background-color: var(--primary-glass-color);
        border-radius: 15px;
        border: 4px dashed var(--cuaternary-color);
        padding: 20px;
    }
    .row-title
    {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
        padding-left: 15%;
        padding-right: 15%;
     
    }
    .row-buttons
    {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
        
        width: 100%;
        gap: 20px;
       
    }
   
    hr.rounded {
    border-top: 5px solid var(--cuaternary-color);
    border-radius: 5px;
    width: 100px;
    margin-bottom: 10px;
    }
    h1.title
    {
        font-size: clamp(24px, 5vw, 45px);
        font-weight: 600;
        color: var(--primary-text-color);
        text-align: center;
    }
    h2.subtitle
    {
        font-size: clamp(14px, 5vw, 24px);
        font-weight: 400;
        color: var(--primary-text-color);
        text-align: center;
        width: 70%;
    }
    .description 
    {
       position: relative;
	    color: var(--primary-text-color);
		font-weight: 300;
		text-wrap: pretty;
		font-size: clamp(16px, 3vw, 25px);
        
        width: 50%;
	}



    @media (max-width: 768px)
    {

    }
</style>