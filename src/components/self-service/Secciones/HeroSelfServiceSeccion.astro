---
import { setURL } from '../../../data/constants';

interface Props{
    strapiData: any;
}

const{ strapiData } = Astro.props;

const MediaImage = strapiData.pageData.data.pageSelfServ.data.attributes.Header.Media.data.attributes.url;
const Headings = strapiData.pageData.data.pageSelfServ.data.attributes.Header.Headings[0].Heading;
const imageurl = `url(${setURL(MediaImage)})`;


---
<section id="heroselfservice" style={`--image: ${imageurl};`}>
   
    <!-- <p class="title">SELF <span class="text-primaryColor"> SERVICE </span> <span class="text-primaryTextColor"> CENTER</span></p> -->
    <p class="title">{Headings}</p>

</section>
 
<style>
    section{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
		box-sizing: border-box;
		margin-top: 80px;
        margin-bottom: 50px;
		height: 80vh;
        background-image: var(--image);
        background-size: cover;
        background-position: center;
 
    }
    .green-ball-blured{
    top:20%;
	left: 35%;
	position: absolute;
    width: clamp(0px, 50vw, 530px);
	height: clamp(0px, 50vw, 530px);
	border-radius: 100%;
    background: linear-gradient(0deg, #03FB75 0%, #03FB75 100%);
	filter: blur(100px);
    opacity: 0.8;
	z-index: -1;
	}
	.title{
	color: var(--primary-text-color);
	font-size: clamp(14px, 5vw, 120px);
	font-weight: 700;
	text-align: center;
	justify-content: center;
    text-shadow: 5px 5px 5px rgba(0, 0, 0, 0.8);
	}

    @media (max-width: 768px) 
    {
	section{
        height: 30vh;
    }
	.title{
	color: var(--secondary-color);
	font-size: clamp(14px, 30vw, 45px);
	font-weight: 700;
	text-align: center;
	justify-content: center;
	}
	}
    
</style>