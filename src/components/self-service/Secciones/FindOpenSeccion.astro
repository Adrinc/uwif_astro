---
import BotonFlecha from "../../global/BotonFlecha.astro";
let buttons = [
    {
        texto: "Find a store",
        link: "#"
    },
    {
        texto: "See how",
        link: "#"
    },
]
---


<section id="findOpenSeccion">

		<div class="contenedor">
			
            <div class="columnaIzquierda">
				<p class="title ">
					Find a open store
                    <br>
                    near U.
				</p>
                <p class="description">
                    Select stores are operating 10 am to 6 pm local time.
                </p>

				
                <div class="row-buttons">
                    {
                        buttons.map((button) => (
                            <BotonFlecha {...button} textColor="var(--tertiary-text-color)" marginTopIncon="5px" paddingleft="0px" borderColor="transparent" borderColorHover="transparent" gradientColorCenter="transparent" gradientColorLeft="transparent" gradientColorRight="transparent"  fontweight="500" iconColor="var(--primary-color)" fontsize="32px" textColorHover="var(--tertiary-text-color)" />
                        ))
                    }
                            
              
                </div>

            </div>

	
		</div>
		<span class="green-ball-blured"></span>
	
</section>


<style>

    .columnaIzquierda
    {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 50%;
        height: 100%;
        padding: clamp(16px, 5vw, 40px);

    }

	 .green-ball-blured{
    top: -10%;
	left: 0;
	position: absolute;
    width: clamp(0px, 50vw, 1000px);
	height: clamp(0px, 50vw, 1000px);
	border-radius: 100%;
    background: linear-gradient(0deg, #02572b 0%, #02572a 100%);
	filter: blur(100px);
    opacity: 0.8;
	z-index: -1;
	}
	section
	{
		position: relative;
		display: flex;
		flex-direction: column;
		justify-content: center;
		box-sizing: border-box;
		padding-left: clamp(0px, 5vw, 100px);
		padding-right: clamp(0px, 5vw, 100px);
		padding-bottom: 100px;
	
	}
	img{
		width: 50%;
		height: 100%;
		object-fit: contain;
	}

	.contenedor
	{ 
        position: relative;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		border-radius: 25px;
		
		height: 100%;
		max-height: 500px;
        background-image: url("/image/selfservicepage/mapa.png");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        z-index: 2;
        padding-left: clamp(0px, 5vw, 100px);
		background-color: aquamarine;
        
        
		
	}
    .contenedor::before
    {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-color: rgba(0, 0, 0, 0.8); 
        border-radius: 25px;
        z-index: 1;
    }
    .row-buttons
    {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: flex-start;
        
        width: 100%;
        gap: 20px;

       
    }
	.title{
   
			color: var(--primary-text-color);
			font-size: clamp(16px, 4vw, 60px);
			font-weight: 600;
			
			text-align: left;
			text-wrap: balance;
			text-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);
			
			}

    .description{
    
        color: var(--primary-text-color);
        font-size: clamp(16px, 3vw, 30px);
        font-weight: 500;
        text-align: left;
        text-wrap: pretty;
        text-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);
        margin-top: 16px;
    }





	@media (max-width: 900px) 
	{
		.contenedor
		{
			flex-direction: column-reverse;
			align-items: center;
			height: 100%;
		
			padding: 16px;
			max-height: 100%;
		}
		.row-buttons
    {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        
        width: 100%;
        gap: 20px;

       
    }
		.columnaIzquierda{
			align-items: center;
			text-align: center;
			padding: 16px;
			width: 100%;
		}
		img{
		width: clamp(100px, 50vw, 200px);
		object-fit: contain;
		align-self: center;
		margin-right: 50px;
	}
	.title, .description{
		text-align: center;
		
	}
	}
	@media screen and (height< 450px) 
	{

		
	}
			





</style>