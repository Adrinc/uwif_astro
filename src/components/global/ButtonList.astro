---
import BotonFlecha from "./BotonFlecha.astro";

interface Props {
    fillAll?:boolean;
    color?: String;
    hasIcon?: boolean;
	buttons: any;
}
const{
    fillAll = false,
    color,
    hasIcon,
    buttons
}= Astro.props;

---

<div class="flex flex-wrap items-center justify-center">
    {
        
        buttons.map((button: any, index: number) => (
            <div class="p-2" >
            <BotonFlecha
                texto={button.Text && button.Text}
                link={button.Link}
                backgroundColor={`${ index === buttons.indexOf(buttons[buttons.length - 1]) ? "primaryColor" : fillAll ? color ? color : "secondaryColor" : `transparent`}`}
                borderColor={`${ index === buttons.indexOf(buttons[buttons.length - 1]) ? color ? color : `border-primaryColor` : `border-secondaryColor`}`}
                iconColor={`${ index === buttons.indexOf(buttons[buttons.length - 1]) ? fillAll ? color ? color : "fill-primaryTextColor" : `fill-primaryColor` : `fill-white`}`}
                iconBackgroundColor={`${ index === buttons.indexOf(buttons[buttons.length - 1]) ? fillAll ? "bg-white": color ? color : "bg-white" : "bg-secondaryColor"}`}
                showIcon={hasIcon}
            />
        </div>
        ))
    }
<div/>