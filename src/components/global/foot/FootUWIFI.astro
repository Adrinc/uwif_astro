---
import {getPageData} from '../../../services/graphql';
import * as SelfServiceData from '../../../data/queries/FootQuerys';

import BotonU from "../../global/BotonU.astro";
import { setURL } from '../../../data/constants';

const data = await getPageData(SelfServiceData.GetFootFull());
const Slogan = data.pageData.data.generalFooter.data.attributes.Slogan;
const Button = data.pageData.data.generalFooter.data.attributes.Button;
const TextButton = data.pageData.data.generalFooter.data.attributes.TextButton;
const SocialMedia = data.pageData.data.generalFooter.data.attributes.SocialMedia;
const InstagramIcon = setURL(SocialMedia[0].Icon.data.attributes.url);
const FacebookIcon = setURL(SocialMedia[1].Icon.data.attributes.url);
const MetaIcon = setURL(SocialMedia[2].Icon.data.attributes.url);


---


    <footer>
        <div class="columnaIz">
            <div class="fila-iconos ">
                <img src={InstagramIcon} alt="instagram" class="image">
                <div class="divider"/>
                <img src={FacebookIcon} alt="instagram" class="image">
                <div class="divider"/>
                <img src={MetaIcon} alt="instagram" class="image">
                <div class="divider"/>
            </div>
            <div class="fila-terminos-condiciones">
                <a href={TextButton[2].Link} class="infotext">{TextButton[2].Text}</a>
                <a href={TextButton[3].Link} class="infotext">{TextButton[3].Text}</a>
            </div>
 
        </div>
        <div class="columnaCentral">
            <BotonU texto={Button.Text} link={Button.Link}  />
            <p class="title">{Slogan}</p>
            <p class="title">{TextButton[0].Text}</p>

            <span class="purple-ball-blured"></span>
        </div>
        <div class="columnaDerecha">
            <div class="flex flex-row justify-center p-4 items-center gap-1 w-full md:w-auto">
                <img class="top-icon" src=`${setURL(TextButton[1].Icon.data.attributes.url)}` alt={TextButton[1].Icon.data.attributes.ur}>
                <a href={TextButton[1].Link} class="title">{TextButton[1].Text}</a>
            </div>
            <p class="infotext">Copyright Â© 2023 U-wifi Wireless</p>
        </div>
        
    </footer>



<style>
    footer{
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        width: 100vw;
        max-height: 50vh;

		font-family: var(--font-family-primary);
        padding-left: clamp(0px, 5vw, 100px);
		padding-right: clamp(0px, 5vw, 100px);
        gap:20px;
        margin-bottom: 30px;

    }
        a::hover{
            
        }
    .columnaIz, .columnaCentral, .columnaDerecha{
        display: flex;
        flex-direction: column;
        height: 100%;
        gap: 24px;
   
    }
    .columnaIz{

        justify-content: flex-end;
        align-items: center;
        align-content: center;
        align-self: center;
        width: 30%;
        order: 1;
    }
    .columnaCentral{
        position: relative;
        justify-content: flex-start;
        align-items: center;
        align-content: center;
        width: 40%;
        order: 2;
        height: 30vh;
    }
    .columnaDerecha{
        justify-content: flex-end;
        align-items: flex-end;
        align-content: flex-end;
        width: 30%;
        order: 3;
    }
    .divider{
        width: 1px;
        height: 100px;
        border-right-width: 4px;
        background-color: var(--primary-text-color);
        display: block;
        align-self: center;
    }


   .purple-ball-blured{
       
		position: absolute;
        width: clamp(200px, 50vw, 400px);
		height: clamp(150px, 50vw, 250px);
		border-radius: 50px;
    
        background: linear-gradient(180deg, #2603FB 0%, #DC06FF 100%);
		filter: blur(250px);
		z-index: -1;
	}
 
    .fila-iconos{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        height: 100%;
    }
    .fila-terminos-condiciones{
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        width: 100%;
        gap: 100px;
    }
    .title{
       font-size: clamp(18px, 2vw, 32px);
       text-align: center;
       color: var(--primary-text-color)
    }
    .infotext{
        font-size: clamp(16px, 3vw, 18px);
        color: var(--primary-text-color);
        font-weight: 400;
        font-family: var(--font-family-secondary);
        text-align: center;
    }
    .image{
        width: clamp(50px, 5vw, 85px);
        height: clamp(50px, 5vw, 85px);
        filter: invert(1);
    }
    .top-icon{
        width: clamp(25px, 5vw, 55px);
        height: clamp(25px, 5vw, 55px);
        filter: invert(1);
    }


/* --------------------------------------- */



@media (max-width: 768px) {
	footer{
        flex-direction: column;
        height: 100%;
        gap: 8px;
   
    }
    .columnaIz, .columnaCentral, .columnaDerecha{
        width: 100%;
        justify-content: center;
        align-items: center;
        align-content: center;
        padding: 8px;
        
    }
    .columnaIz {
        order: 2;
    }
    .columnaCentral {
        order: 1;
    }
    .columnaDerecha {
        order: 3;
    }
    .fila-terminos-condiciones{
        gap: 10px;
        justify-content: center;
    }
    .fila-iconos{
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
        width: 100%;
 
    }

    .divider{

        display: none;
    }
    

	}

    </style>../../../data/queries/FootQuerys